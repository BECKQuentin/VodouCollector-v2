
<div class="mx-5 pb-3">
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4">{{ form_row(form.firstname) }}</div>
        <div class="col-md-4">{{ form_row(form.lastname) }}</div>
        {% if is_granted('ROLE_ADMIN') %}
            <div class="col-md-4">{{ form_row(form.roles) }}</div>
        {% endif %}
    </div>

    <div class="d-flex">
        <div class="col-md-4">{{ form_row(form.email) }}</div>
        {% if adding_member is defined %}
            <div title="Un email de confirmation de compte sera envoyé à l'utilisateur">
                <i class="fa-solid fa-circle-info"></i>
            </div>
        {% endif %}
    </div>
    {% if user is defined and app.user is same as user %}
        {% if adding_member is defined %}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.password.first) }}</div>
            </div>
            <div class="row">
                <div class="col-md-6">{{ form_row(form.password.second) }}</div>
            </div>
        {% else %}
            <div class="row">
                <div class="col-md-6">{{ form_row(form.password.first, {'required' : false}) }}</div>
            </div>
            <div class="row">
                <div class="col-md-6">{{ form_row(form.password.second, {'required' : false}) }}</div>
            </div>
        {% endif %}

    {% endif %}


    <div class="d-flex justify-content-between">
        {{ form_row(form.submit) }}
    </div>
    {{ form_end(form) }}
</div>
