{% extends "base.html.twig" %}


{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('mediaObject') }}
    {{ encore_entry_script_tags('object') }}
{% endblock %}

{% block body %}

    <div id="objectFileSection" class="content_box" data-id-object="{{ object.id }}">
        <div class="position-relative">
            {% include 'objects/objects/navbar_objects_link.html.twig' %}
{#            {% include 'objects/objects/navbar_objects_tool_standard.html.twig' %}#}
        </div>

        <div class="d-flex flex-wrap pt-2 {{ object.files.count == 0 ? 'justify-content-center' }}">

            {% if object.files.count > 0 %}
                {% for file in object.files%}
                    {% if file.extension == "pdf" %}
                        <div class="card_file p-2 mb-3 m-2" >
                            <div class="position-relative">
                                <div class="card_object_overlay_modal_button" data-bs-toggle="modal" data-bs-target="#fileModal"></div>
                                <object type="application/pdf" width="100%" height="100%">
                                    <param name="src" value="{{ file.src|file }}" />
                                    <p>Votre navigateur n'affiche pas les pdf</p>
                                </object>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="d-flex align-items-end">{{ file.src }}</span>
                                <div>
                                    {% if is_granted('ROLE_MEMBER') %}
                                        <a href="{{ file.src|file }}" download class="btn btn-vodou"><i class="fa-solid fa-download"></i></a>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('delete_objects_file', {id:file.id, object:object.id}) }}" title="Supprimer" class="btn btn-vodou"><i class="fa-solid fa-trash"></i></a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% elseif file.extension == "xlsx" or file.extension == "xls" %}
                        <div class="card_file p-2 mb-3 m-2" data-bs-toggle="modal" data-bs-target="#fileModal">
                            <div>
                                <object type="application/vnd.ms-excel" width="100%" height="100%" data="{{ file.src|file }}">
                                </object>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="d-flex align-items-end">{{ file.src }}</span>
                                <div>
                                    {% if is_granted('ROLE_MEMBER') %}
                                        <a href="{{ file.src|file }}" download class="btn btn-vodou"><i class="fa-solid fa-download"></i></a>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('delete_objects_file', {id:file.id, object:object.id}) }}" title="Supprimer" class="btn btn-vodou"><i class="fa-solid fa-trash"></i></a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% else %}
                        <div class="card_file p-2 mb-3 m-2">
                            <div>
                                <div class="d-flex align-items-center fs-4">
                                    <i class="fa-solid fa-eye-slash p-2"></i>Désolé
                                </div>
                                <p>Votre navigateur n'affiche pas ce format</p>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span class="d-flex align-items-end">{{ file.src }}</span>
                                <div>
                                    {% if is_granted('ROLE_MEMBER') %}
                                        <a href="{{ file.src|file }}" download class="btn btn-vodou"><i class="fa-solid fa-download"></i></a>
                                    {% endif %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('delete_objects_file', {id:file.id, object:object.id}) }}" title="Supprimer" class="btn btn-vodou"><i class="fa-solid fa-trash"></i></a>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- 16:9 aspect ratio -->

                {% endfor %}
            {% else %}
                <div class="d-flex flex-column text-center pt-5 pb-5">
                    <p class="fs-2"><i class="fa-solid fa-ban"></i></p>
                    <p>Cet objet n'a pas de fichier annexe</p>
                </div>
            {% endif %}

        </div>


        <!-- Modal -->
        <div class="modal fade p-0" id="fileModal" tabindex="-1" role="dialog" aria-labelledby="fileModal" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content" style="height: 100vh">
                    <div class="modal-header">
                        <h5 class="modal-title px-5">{{ object.id }} - {{ object.title }}</h5>
                        <button type="button" class="close btn btn-vodou px-1 py-0" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true" class="fs-3">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body p-0">
                        {% for file in object.files%}
                            {% if file.extension == "pdf" %}
                                <object type="application/pdf" width="100%" height="100%" data="{{ file.src|file }}"></object>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>

    </div>




{% endblock %}